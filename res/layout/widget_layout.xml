<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">
    
    <TextView 
        android:id="@+id/widget_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@drawable/widget_banner_background"
        android:text="GGC News"
        android:textColor="@color/thai_white_color"/>
    
    <AdapterViewFlipper
        android:id="@+id/widget_view_flipper"
        android:layout_width="fill_parent"
        android:background="@drawable/widget_view_flipper_background"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoStart="true"
        android:flipInterval="5000"
        android:loopViews="true">
    </AdapterViewFlipper>
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/widget_previous_button"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/widget_button"
            android:text="Previous"
            android:textColor="@color/thai_white_color" />
        
        <Button
            android:id="@+id/widget_switch_button"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/widget_button"
            android:text="Switch"
            android:textColor="@color/thai_white_color" />
        
        <Button 
            android:id="@+id/widget_next_button"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/widget_button"
            android:text="Next"
            android:textColor="@color/thai_white_color"/>
        
    </LinearLayout>
    
</LinearLayout>
