<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ds_setup_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ggc_green" >

        <TableRow
            android:id="@+id/cs_term_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip" >

            <TextView
                android:id="@+id/cs_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_name_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/ds_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/cs_subject_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip" >

            <TextView
                android:id="@+id/cs_time_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_bday_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/ds_bday_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />
        </TableRow>

        <TableRow
            android:id="@+id/cs_course_number_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip" >

            <TextView
                android:id="@+id/cs_instructor_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_gender_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ToggleButton
                android:id="@+id/ds_gender_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Male"
                android:textOn="Female" />
        </TableRow>

        <TableRow
            android:id="@+id/ds_class_list_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <ListView
                android:id="@+id/ds_class_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                tools:listitem="@android:layout/simple_list_item_1" >
            </ListView>
        </TableRow>

        <TableRow
            android:id="@+id/ds_subject_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_subject_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/ds_subject_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ds_subject_names"
                tools:listitem="@android:layout/simple_spinner_item" />
        </TableRow>

        <TableRow
            android:id="@+id/ds_course_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_course_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/ds_course_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@android:layout/simple_spinner_item" />
        </TableRow>

        <TableRow
            android:id="@+id/ds_search_by_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/cs_capacity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_search_by_label"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ToggleButton
                android:id="@+id/ds_search_by_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Name"
                android:textOn="Number" />
        </TableRow>

        <TableRow
            android:id="@+id/ds_section_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_section_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/ds_section_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@android:layout/simple_spinner_item" />
        </TableRow>

        <TableRow
            android:id="@+id/ds_class_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ds_class_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds_add_class_label" />
        </TableRow>
    </TableLayout>

</ScrollView>